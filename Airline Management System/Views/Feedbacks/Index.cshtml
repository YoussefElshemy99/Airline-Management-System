@model IEnumerable<Airline_Management_System.Models.Feedback>

@{
    ViewData["Title"] = "Passenger Reviews";
}

<div class="container mt-4">
    <div class="text-center mb-5">
        <h2 class="fw-bold">Passenger Reviews</h2>
        <p class="text-muted">See what others are saying about their journey with us.</p>
        
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-pencil-square"></i> Write a Review
        </a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div class="text-warning">
                                @for (int i = 0; i < item.Rating; i++)
                                {
                                    <i class="bi bi-star-fill"></i>
                                }
                                @for (int i = item.Rating; i < 5; i++)
                                {
                                    <i class="bi bi-star"></i>
                                }
                            </div>
                            <small class="text-muted">
                                @if(item.Flight != null)
                                {
                                    <span>Flight @item.Flight.FlightNumber</span>
                                }
                            </small>
                        </div>
                        
                        <h5 class="card-title text-dark">@item.CustomerName</h5>
                        <p class="card-text text-secondary">"@item.Comments"</p>
                    </div>
                    
                    @if (User.IsInRole("Admin"))
                    {
                        <div class="card-footer bg-white border-0 text-end">
                            <form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return confirm('Are you sure you want to delete this review?');">
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
    
    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            No reviews yet. Be the first to leave one!
        </div>
    }
</div>
